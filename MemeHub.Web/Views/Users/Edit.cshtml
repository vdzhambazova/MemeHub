@model MemeHub.Models.ViewModels.Users.UserEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(u => u.Id)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <br />
            @Html.LabelFor(u => u.BirthDate, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(u => u.BirthDate, null, new {htmlAttributes = new {@class = "form-control", type = "date"}})
                @Html.ValidationMessageFor(u => u.BirthDate, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.ProiflePictureUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(u => u.ProiflePictureUrl, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.ProiflePictureUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
                @Html.ActionLink("Home", "All", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>

    </div>
}