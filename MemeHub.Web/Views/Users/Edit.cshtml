@model MemeHub.Models.ViewModels.Users.UserEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm())
{
    <form class="form-horizontal">

        @Html.HiddenFor(u => u.Id)

        <div class="form-group">
            @Html.LabelFor(u => u.BirthDate)
            @Html.EditorFor(m => m.BirthDate, null, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ProiflePictureUrl)
            @Html.EditorFor(x => x.ProiflePictureUrl, null, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <input type="Submit" value="Edit" class="btn btn-default" />
        </div>

    </form>
}