@model MemeHub.Models.ViewModels.Users.UserProfileViewModel
@{
    ViewBag.Title = "Profile";
}

<div class="jumbotron">
    <div class="container">
        <h1>Profile!</h1>
        <p class="text-muted">That is you, hilarious motherfucker!</p>
        <img src="@Model.ProiflePictureUrl" class="img-circle" alt="profilePicture" width="200" />
        <br />
        <p class="lead">@Html.DisplayFor(uvm => uvm.Username)</p>
        @Html.ActionLink("Edit Profile", "Edit", "Users", null, new { @class = "btn btn-lg btn-primary" })
    </div>
</div>

@if (Model.Memes.Any())
{
    <div class="row">
        <div class="col-md-3 col-md-offset-5 ">
            <h1>Your fun memes</h1>
            <br />
            <br />
        </div>
        <div class="col-md-6 col-md-offset-3">

            @foreach (var meme in Model.Memes)
            {
                <br />
                <article>
                    <header>
                        <h3>
                            <strong>
                                @Html.ActionLink(@meme.Caption, "Details", "Memes", new { id = meme.Id }, new { style = "color:#141414" })
                            </strong>

                        </h3>
                        <br />
                    </header>

                    <img src="@meme.MemeImageUrl" alt="@meme.Caption" width="500" />
                </article>
                <br />
                <div class="row">
                    <div class="col-lg-1">@Html.ActionLink("Edit", "Edit", "Memes", new { id = meme.Id }, new { @class = "btn btn-sm btn-default" })</div>
                    <div class="col-lg-1">@Html.ActionLink("Delete", "Delete", "Memes", new { id = meme.Id }, new { @class = "btn btn-sm btn-danger" })</div>
                </div>
                <br />
                <hr />
            }

        </div>
    </div>
}
else
{
    <br />
    <br />
    <div class="row">
        <div class="col-md-3 col-md-offset-5 ">
            <h3 class="text-muted">No posts to show</h3>
        </div>
    </div>
}
