@model MemeHub.Models.ViewModels.Memes.MemeDeleteViewModel

@{
    ViewBag.Title = "Delete Meme";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Delete Meme</h2>
<h3>Are you sure you want to delete this?</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-offset-1">
                <article>
                    <header>
                        <h4>
                            @Html.ActionLink(Model.Caption, "Details", "Memes", new { id = Model.Id }, new { style = "color:#141414" })
                        </h4>
                        <br />
                    </header>

                    <img src="@Model.MemeImageUrl" alt="@Model.Caption" width="300" />
                </article>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Home", "All", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

}
