@model MemeHub.Models.ViewModels.Memes.MemeEditViewModel
@{
    ViewBag.Title = "Edit Meme";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Edit Meme</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(u => u.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <br />
            @Html.LabelFor(m => m.Caption, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Caption, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Caption, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
                @Html.ActionLink("Home", "All", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

}
